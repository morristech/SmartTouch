<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/tvPrivacyLetter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0E0E0"
        android:paddingBottom="5dip"
        android:paddingLeft="5dip"
        android:paddingTop="5dip"
        android:text="A"
        android:textColor="#454545" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imgvPrivacyItem"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/smartkey_app_default_icon" />

        <TextView
            android:id="@+id/tvPrivacyItem"
            style="@style/TextBaseStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="@color/COLOR_BLACK"
            android:textSize="@dimen/TEXT_DEFAULT_SIZE" />

        <ImageView
            android:id="@+id/imgvPrivacyLock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/smartkey_btn_off" />

    </LinearLayout>
    
</LinearLayout>
