<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyfive"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/gesturepwd_create_tips"
        style="@style/guesture_textview_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/STR_DRAW_GESTURE_PASSWORD" />

    <LinearLayout
        android:id="@+id/gesturepwd_setting_preview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/gesture_create_grid_bg"
        android:orientation="vertical"
        android:padding="5.0dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="6.0dp" >

            <View
                android:id="@+id/gesturepwd_setting_preview_0"
                android:layout_width="6.0dp"
                android:layout_height="6.0dp"
                android:background="@drawable/trans" />

            <View
                android:id="@+id/gesturepwd_setting_preview_1"
                android:layout_width="6.0dp"
                android:layout_height="6.0dp"
                android:layout_marginLeft="6.0dp"
                android:background="@drawable/trans" />

            <View
                android:id="@+id/gesturepwd_setting_preview_2"
                android:layout_width="6.0dp"
                android:layout_height="6.0dp"
                android:layout_marginLeft="6.0dp"
                android:background="@drawable/trans" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="6.0dp"
            android:layout_marginTop="6.0dp" >

            <View
                android:id="@+id/gesturepwd_setting_preview_3"
                android:layout_width="6.0dp"
                android:layout_height="6.0dp"
                android:background="@drawable/trans" />

            <View
                android:id="@+id/gesturepwd_setting_preview_4"
                android:layout_width="6.0dp"
                android:layout_height="6.0dp"
                android:layout_marginLeft="6.0dp"
                android:background="@drawable/trans" />

            <View
                android:id="@+id/gesturepwd_setting_preview_5"
                android:layout_width="6.0dp"
                android:layout_height="6.0dp"
                android:layout_marginLeft="6.0dp"
                android:background="@drawable/trans" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="6.0dp"
            android:layout_marginTop="6.0dp" >

            <View
                android:id="@+id/gesturepwd_setting_preview_6"
                android:layout_width="6.0dp"
                android:layout_height="6.0dp"
                android:background="@drawable/trans" />

            <View
                android:id="@+id/gesturepwd_setting_preview_7"
                android:layout_width="6.0dp"
                android:layout_height="6.0dp"
                android:layout_marginLeft="6.0dp"
                android:background="@drawable/trans" />

            <View
                android:id="@+id/gesturepwd_setting_preview_8"
                android:layout_width="6.0dp"
                android:layout_height="6.0dp"
                android:layout_marginLeft="6.0dp"
                android:background="@drawable/trans" />
        </LinearLayout>
    </LinearLayout>
"

    <TextView
        android:id="@+id/gesturepwd_create_text"
        style="@style/guesture_textview_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:shadowRadius="1.0"
        android:text="@string/STR_DRAW_UNLOCK_PATTERN" />

    <com.zzy.privacy.LockPatternView
        android:id="@+id/gesturepwd_create_lockview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/reset_btn"
            style="@style/ButtonRed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/STR_RETRY" />

        <Button
            android:id="@+id/right_btn"
            style="@style/ButtonGreen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/STR_CONTINUE" />

    </LinearLayout>

</LinearLayout>